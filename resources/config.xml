<?xml version='1.0' encoding='utf-8'?>
<widget id="com.enterlab.cordevicljs" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Enterlab CorDeviCLJS</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event, uses OnsenUI, Facebook React, web socket enabled and has Clojure on both client and server.
    </description>
    <author email="dev@enterlab.com" href="http://enterlab.com">
        Enterlab Research and Development
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" /><!-- Prevent scrolling in app web view -->
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="1"/>
    <preference name="AutoHideSplashScreen" value="false"/>

    <platform name="browser">        
    </platform>
    <platform name="android">
        <splash src="www/img/splash/android/hdpi/screen.png" density="port-hdpi"/>
        <splash src="www/img/splash/android/ldpi/screen.png" density="port-ldpi"/>
        <splash src="www/img/splash/android/mdpi/screen.png" density="port-mdpi"/>
        <splash src="www/img/splash/android/xhdpi/screen.png" density="port-xhdpi"/>
        <icon src="www/img/icons/android/drawable-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="www/img/icons/android/drawable-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="www/img/icons/android/drawable-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="www/img/icons/android/drawable-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="www/img/icons/android/drawable-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="www/img/icons/android/drawable-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <splash src="www/img/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="www/img/splash/Default-736h.png" width="1242" height="2208"/>
        <icon src="www/img/icons/ios/Icon-40.png" width="40" height="40" />
        <icon src="www/img/icons/ios/Icon-40@2X.png" width="80" height="80" />
        <icon src="www/img/icons/ios/Icon-40@3X.png" width="120" height="120" />
        <icon src="www/img/icons/ios/Icon-60.png" width="60" height="60" />
        <icon src="www/img/icons/ios/Icon-60@2x.png" width="120" height="120" />
        <icon src="www/img/icons/ios/Icon-60@3x.png" width="180" height="180" />
        <icon src="www/img/icons/ios/Icon-72.png" width="72" height="72" />
        <icon src="www/img/icons/ios/Icon-72@2x.png" width="144" height="144" />
        <icon src="www/img/icons/ios/Icon-76.png" width="76" height="76" />
        <icon src="www/img/icons/ios/Icon-76@2x.png" width="152" height="152" />
        <icon src="www/img/icons/ios/Icon-Small-50.png" width="50" height="50" />
        <icon src="www/img/icons/ios/Icon-Small-50@2X.png" width="100" height="100" />
        <icon src="www/img/icons/ios/Icon-Small.png" width="29" height="29" />
        <icon src="www/img/icons/ios/Icon-Small@2X.png" width="58" height="58" />
        <icon src="www/img/icons/ios/Icon-Small@3X.png" width="87" height="87" />
        <icon src="www/img/icons/ios/Icon.png" width="57" height="57" />
        <icon src="www/img/icons/ios/Icon@2X.png" width="114" height="114" />        
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
